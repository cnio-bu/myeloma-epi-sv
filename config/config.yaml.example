paths:
  models: "/path/to/models"

samples:
    sample1:
        pod5: "/path/to/pod5s"
    sample2:
        pod5: "/path/to/pod5s2"

basecallers:
  dorado:
    bin: "dorado"
    models:
      - dna_r10.4.1_e8.2_400bps_fast@v4.2.0
      - dna_r10.4.1_e8.2_400bps_hac@v4.2.0
      - dna_r10.4.1_e8.2_400bps_sup@v4.2.0

resources:
    default:
        partition: main
        threads: 1
        mem_mb: 4000
        runtime: 30
        slurm_extra: ""
    basecall_dorado:
        partition: gpu
        threads: 8
        mem_mb: 32000
        runtime: 1440
        slurm_extra: "--gres=gpu:1"
